Config { font = "xft:Arimo for Powerline:size=11"
       , additionalFonts = ["xft:Siji:size=11"]
       , border = NoBorder
       , bgColor = "#1B1D1E"
       , fgColor = "#6f7e96"
       , alpha = 255
       , position = TopSize L 100 0
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = False
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = False
       , overrideRedirect = False
       , commands = [ Run Weather "EDDT" ["-t","<tempC>Â°C"] 36000
                    , Run Date "%H:%M" "date" 600
                    , Run Com "/home/psirus/Code/Bash/volume.sh" [] "volume" 10
                    , Run Com "mpc" ["current"] "song" 10
                    , Run XMonadLog
                    , Run StdinReader
                    , Run Battery ["-t", "<left>% - <timeleft>"] 600
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%XMonadLog%} %StdinReader%\
                    \{ <fc=grey>%song%</fc> \
                    \| <fc=#849308>%volume% </fc>\
                    \| <fc=grey>%EDDT% </fc>\
                    \| <fc=#A91919>%battery% </fc>\
                    \| <fc=grey>%date% </fc>"
       }
